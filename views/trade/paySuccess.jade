extends ../layout

block content
    link(href='/public/css/trade/trade.css',rel='styleSheet')
    include ../includes/responsive
    include ../includes/nav
    .positon.wrapper
        |您的位置：首页<em>#{sep}</em>筛查服务<em>#{sep}</em>核对订单信息<em>#{sep}</em>成功提交订单
    section.wrapper.pay-success-wrapper
        .pay-success
            .trade-step
                p.cart.step-wrapper
                    span
                        i.icon
                    span.text-info 我的购物车
                p.line.line1.text-stress
                p.check.step-wrapper
                    span
                        i.icon
                    span.text-info 核对订单信息
                p.line.line2.text-stress
                p.commit.step-wrapper
                    span
                        i.icon
                    span.text-info 成功提交订单


            .order-box.border-default
                i.icon.success
                .order-box-right
                    p.pay-tip.text-success 订单支付成功
                    p.order-num-price
                        span 订单号 : #{data.data.id}
                        span 支付金额 : ￥#{(parseFloat(data.data.totalCost) / 100).toFixed(2)}
                    p.order-detail.text-main
                        a.text-main(href='/trade/order/detail?id=#{data.data.id}') 订单详情>>
                    p.order-tel.text-info 电话预约筛查:
                        span.text-main 400-686-9911
