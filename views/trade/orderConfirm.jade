                        td.text-stress $800
                        td
                            a 删除
                    tr
                        td(colspan="2")
                            input(type="checkbox")
                            span 全选
                        td(colspan="4")
                            span 共<em class="text-stress">1</em>件商品,商品总价:
                                span.price.text-stress $1480
