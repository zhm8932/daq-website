extends ../layout

block content
    link(href='/css/trade/trade.css',rel='styleSheet')
    include ../includes/responsive
    include ../includes/nav
    .positon.wrapper
        |您的位置：首页<em>#{sep}</em>筛查服务<em>#{sep}</em>核对订单信息<em>#{sep}</em>成功提交订单
    section.wrapper
        .order-success
            .trade-step
                p.cart.step-wrapper
                    span
                        i.icon
                    span.text-info 我的购物车
                p.line.line1.text-stress
                p.check.step-wrapper
                    span
                        i.icon
                    span.text-info 核对订单信息
                p.line.line2.text-stress
                p.commit.step-wrapper
                    span
                        i.icon
                    span 成功提交订单

            .order-box.border-default
                i.icon.success
                .order-box-right
                    p.timer-box
                        |订单提交成功,请在
                        span.timer.text-stress(data-paytime="#{data.updatedAt}",data-currenttime="#{data.currentTime}") 0分0秒
                        |内完成支付
                    p.order-detail.text-main
                        a.text-main(href='/trade/order/detail?id=#{data.id}') 订单详情>>
                    p.price-box
                        span.text-sec 应付金额:
                        span.price.text-stress ￥#{(parseFloat(data.totalCost) / 100).toFixed(2)}


            .list-info 选择支付方式

            if !browser.mobile
                .pay-box.wechat-pay.border-default 微信支付
                .pay-box.alipay.border-default(data-paynum='4') 支付宝支付
            else
                .pay-box.alipay.border-default(data-paynum='5') 支付宝支付


            #order-detail(data-id="#{data.id}")



    include ../includes/footer
    script.
        seajs.use('/js/trade/order_success.js')
