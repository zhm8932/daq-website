doctype html
html
    head
        -var transmitType,transmitItems,fitPeople,slogan,keyword,description,storage;
        each prouctAttr in goods_detail.productKeyAttributeList
            if(prouctAttr.attributeName == 'transmit_type')
                -transmitType = JSON.parse(prouctAttr.value);
            if(prouctAttr.attributeName == 'transmit_items')
                -transmitItems = JSON.parse(prouctAttr.value);
            if(prouctAttr.attributeName == 'fit_people')
                -fitPeople = prouctAttr.value;
            if(prouctAttr.attributeName == 'slogan')
                -slogan = prouctAttr.value;
            if(prouctAttr.attributeName == 'title')
                -title = prouctAttr.value;
            if(prouctAttr.attributeName == 'keyword')
                -keyword = prouctAttr.value;
            if(prouctAttr.attributeName == 'page_description')
                -description = prouctAttr.value;
            if(prouctAttr.attributeName == 'storage_condition')
                -storage = prouctAttr.value;
        title= title
        meta(name='keywords',content= keywords,value="#{keyword}")
        meta(name='description',content= description,value="#{description}")
        meta(name='viewport',content='width=device-width,initial-scale=1')
        meta(http-equiv="X-UA-Compatible",content="IE=edge")
        meta(name='renderer',content='webkit')
        include ../includes/head
        <!--[if lt IE 9]>
        script(src="/js/libs/html5shiv.min.js")
        script(src="/js/libs/respond.min.js")
        <![endif]-->
        <!--[if IE 6]>
        <script src="/js/libs/DD_belatedPNG-min.js"></script>
        <script type="text/javascript">
        DD_belatedPNG.fix('img,.icon')
        </script>
        <![endif]-->

        body
            include ../includes/header
            link(href='/css/screenings/goods_detail.css',rel='styleSheet')
            include ../includes/responsive
            include ../includes/nav
            .positon.wrapper.
                您的位置为：首页 <em>#{sep}</em> 筛查服务 <em>#{sep}</em> 生殖感染(CT/NG)核酸筛查套餐



            if get_goods_detail_success
                section.goods_basic.clearfix
                    .wrapper
                        dl

                          if goods_detail
                            dt.slideBox
                                .touchslider-viewport
                                    .bd
                                      each item in goods_detail.goodsImages
                                        p: img(src='#{item.imageUrl}',alt=goods_detail.goodsName)
                                .switch
                                    .prev
                                        i.icon
                                    .next
                                        i.icon
                                .tit
                                    div
                                      each item in goods_detail.goodsImages
                                        span: img(src='#{item.imageUrl}',alt=goods_detail.goodsName)


                            dd
                                h1= goods_detail.goodsName
                                .price
                                    span.new
                                        em ￥
                                        | #{parseInt(goods_detail.discountPrice)/100}
                                    span.old
                                        | 原价#{parseInt(goods_detail.price)/100}
                                p
                                    label.text-sec 检测人群：
                                    | #{fitPeople}
                                p
                                    label.text-sec 样品种类：
                                    each item,index in transmitItems
                                        | #{item.name}
                                        if(index != transmitItems.length-1)
                                            |、
                                .type-box
                                    .box-header
                                        span.tip 请选择所需服务方式
                                        i.icon.close
                                    div
                                        label.text-sec 服务方式：
                                        -var json = JSON.parse(locals_sample);
                                        aside#transmit-type.service_type
                                            each value,key in transmitType
                                                span.type(data-transmitType='#{key}',data-favPrice='#{value}',data-value='{"#{key}":"#{value}"}')
                                                    | #{json[key]}
                                                    mark 优惠￥#{parseInt(value)/100}


                                    p#district
                                        label.text-sec 取样地址：
                                        -var address = JSON.parse(locals_address)
                                        span#province #{address[0].name}
                                        span#city #{address[1].name}
                                        //select#area.none
                                        .select-box
                                            .selected
                                                span 南山区
                                                i.icon.pull-down
                                            ul.options
                                                li.option 南山南山啊啊啊区
                                                li.option 福田区
                                                li.option 开发区

                                .submitBox
                                    button#toOrder.submitBtn 立即购买
                                    button#addCartBtn.addCartBtn.submitBtn 加入购物车
                                form(action="/trade/cart/addItem",method="POST")
                                    input(type="hidden",id="address",value="#{addressJSON}")




                section.goods_detail.wrapper
                    .tab
                        span(data-href-id='content-detail') 套餐详情
                        span(data-href-id='content-detection') 检测须知
                        span(data-href-id='content-faq') 相关问题
                    article#content-detail
                        h3
                         i.icon
                         |套餐详情
