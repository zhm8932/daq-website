extends ../layout

block content
    link(href='/css/users/user.css',rel='styleSheet')
    include ../includes/responsive
    include ../includes/nav
    .positon.wrapper
        |您的位置为：首页<em>#{sep}</em>我的订单
    section.wrapper.userBox.clearfix
        aside.fl
            div.user-main.text-center
                img(src='/images/user.png')
                span.tel.text-sec #{account}
            ul.left-nav
                li: a(href='/trade/order/list') 我的订单
                li: a(href='/users/reservation/list') 我的预约
                li: a(href='/users/register/list') 我的挂号
                li: a(href='/users/coupon/listView?useState=1') 我的优惠券
                li: a.on(href='/users/patient/list') 就诊人
        .box-right.fr
            table.patients-table.table.table-striped.table-bordered
                thead
                    th 姓名
                    th 性别
                    th 年龄
                    th 联系电话
                    th 操作
                tbody

                        if data.length <= 0
                            tr
                                td(colspan='5') 暂无优惠券
                        else
                            each item in data
                                tr(data-id="#{item.id}")
                                    td #{item.name}
                                    td #{item.gender}
                                    td #{item.birthday}
                                    td #{item.telephone}
                                    td 删除
                    tr.text-main.text-center
                        td#add-tr(colspan='5')
                            span.plus +
                            span 新增联系人


    include ../includes/footer
    script.
        seajs.use('/js/users/patients.js')
