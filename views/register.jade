extends ./layout

block content
  link(href='/css/index.css',rel='styleSheet')
  include ./includes/responsive
  include ./includes/nav
  .login-view.bg
    section.wrapper
      .loginCom.registerBox
        .tit
          span.on 新用户注册
        .bd
          ul
            li
              input(type="text" class="username" placeholder="请输入手机号码" value="13689557622")
            li
              input(type="text" class="verCode" placeholder="请输入短信验证码")
              button.getCode 获取短信验证码
            li
              input(type="password" class="password" placeholder="请输入密码" value="")
            .prompt
              i.icon
              em 手机输入格式有误/验证码有误
            <p><span class="checkbox checked"></span> 我已阅读并同意<a href="/userAgreement" target="_blank">《都安全用户协议》</a></p>
        .submitBox
          button.ok 注册
        .otherMsg 手机号码用来获取预约码和报告服务码
        //-.operate
          a(href='/login' title='登录') 直接登录
        i.lgbg
        i.lgbg.lgrt

  input#redirectUrl(type="hidden",value=redirectUrl)
  include ./includes/footer
  script.
    seajs.use('/js/login.js')
